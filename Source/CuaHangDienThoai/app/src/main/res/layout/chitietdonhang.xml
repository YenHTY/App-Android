<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:weightSum="10">
    <LinearLayout
        android:gravity="center"
        android:layout_weight="4"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imgchitietdh"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="130dp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="150dp">
        <TextView
            android:text="Tên món hàng"
            android:textSize="25sp"
            android:textAlignment="center"
            android:id="@+id/txttenchitietdh"
            android:textColor="#131313"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#280c74"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: "
                android:textSize="20sp" />
            <TextView
                android:textColor="#142269"
                android:textStyle="bold"
                android:id="@+id/txtsoluongchitietdh"
                android:textSize="20sp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <TextView
            android:id="@+id/txtgiachitietdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Giá món hàng"
            android:textColor="#f20"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>