<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ThemSPActivity"
    android:orientation="vertical">

<android.support.v7.widget.Toolbar
    android:id="@+id/toolbarThem"
    app:title="Thêm sản phẩm"
    android:background="@color/colorPrimary"
    app:titleTextColor="#fdfbfb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</android.support.v7.widget.Toolbar>
<ImageView
    android:layout_gravity="center"
    android:id="@+id/imgsanpham"
    android:layout_marginTop="20dp"
    android:src="@drawable/vivo"
    android:layout_width="180dp"
    android:layout_height="180dp"
    />

<Spinner

    android:background="@drawable/spinner"
    android:layout_gravity="center"
    android:id="@+id/spinner"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:textAlignment="center">

</Spinner>

    <EditText
        android:layout_marginTop="25dp"
        android:background="@drawable/boderkhachhang"
        android:hint="  Tên sản phẩm"
        android:paddingLeft="20dp"
        android:id="@+id/txttensp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />



    <EditText
        android:layout_marginTop="25dp"
        android:background="@drawable/boderkhachhang"
        android:hint="  Giá sản phẩm"
        android:id="@+id/txtgiasp"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <EditText
        android:layout_marginTop="25dp"
        android:background="@drawable/boderkhachhang"
        android:hint="  Mô tả sản phẩm"
        android:id="@+id/txtmotasp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btnThem"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Thêm"
        android:textColor="#252323"
        android:textStyle="bold" />



</LinearLayout>